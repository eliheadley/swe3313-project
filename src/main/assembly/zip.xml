<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/database</directory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/run.bat</source>
            <destName>run.bat</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/hsqldb-2.7.2.jar</source>
            <destName>hsqldb-2.7.2.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/MomAndPizza.png</source>
            <destName>MomAndPizza.png</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/Lock.png</source>
            <destName>Lock.png</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/MasterCard.png</source>
            <destName>MasterCard.png</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/Visa.png</source>
            <destName>Visa.png</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:${project.artifactId}:jar:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>